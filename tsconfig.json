{
  "compilerOptions": {
    "noEmitOnError": false,
    "diagnostics": true,
    "lib": ["esnext"],

    "target": "es2020",

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "jsx": "react",

    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,

    "incremental": true,
    "tsBuildInfoFile": ".build/tsconfig.build.tsbuildinfo",

    "declaration": true,
    // "declarationMap": true,
    "sourceMap": true,

    "outDir": ".build"
  },
  "include": ["src", "tests", "rollup.config.ts"],
  "exclude": ["tests/testcases", "tests/preprocess", "tests/oom-reproduction", "tests/sourcemap-fixtures"]
}
