{
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:allNonMajor",
    ":automergeMinor",
    ":automergeBranchPush",
    ":automergeRequireAllStatusChecks"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Ignore node add peerDependencies",
      "matchPackageNames": ["node"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines", "peerDependencies"],
      "enabled": false
    }
  ]
}
